{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./dist/",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
